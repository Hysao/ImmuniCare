<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/immuniCareBlue"
    tools:context=".healthworker.update.HwEditChildInfoActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vc_back_48_white"
        android:id="@+id/back_button"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Update Child Info"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Child's Name"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:id="@+id/childName"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Child Id"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:id="@+id/childId"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Old Info"
                android:textColor="@color/immuniCareBlue"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:id="@+id/oldInfo"
                android:layout_marginBottom="16dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/immuniCareBlue"
                    android:text="Weight: "
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:layout_weight="1"
                    />


                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:layout_weight="1"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/immuniCareBlue"
                    android:text="Height: "
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:layout_weight="1"
                    />


                <TextView
                    android:id="@+id/height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cm"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:layout_weight="1"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Info"
                android:textColor="@color/immuniCareBlue"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:id="@+id/newInfo"
                android:layout_marginBottom="16dp"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight (kg)"
                android:layout_marginBottom="8dp"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/weightInput"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Height (cm)"
                android:layout_marginBottom="16dp"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/heightInput"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                >

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="CANCEL"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textColor="@color/immuniCareRed"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/cancel_button"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/immuniCareRed"
                    android:layout_marginHorizontal="8dp"
                    />


                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="SAVE"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textColor="@color/immuniCareBlue"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginHorizontal="8dp"
                    android:id="@+id/save_button"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/immuniCareBlue"
                    />



            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>