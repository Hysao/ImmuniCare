<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vaccines.VaccineAddActivity"

    android:gravity="center"

    android:background="@color/immuniCareBlue"

    >


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center"
        android:id="@+id/cardView"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            >

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:textColor="@color/black"
               android:text="ADD VACCINE"
               android:textSize="24sp"
               android:textStyle="bold"
               android:textAllCaps="true"
               android:fontFamily="@font/poppins_regular"
               android:layout_marginBottom="16dp"
               />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:id="@+id/vaccineSpinner"
                android:fontFamily="@font/poppins_regular"
                android:background="@color/white"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Vaccine Stock"
                >


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:background="@color/white"
                    android:id="@+id/vaccineStock"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    />




            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/immuniCareBlue"
                android:text="Manufactured Date: "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="8dp"
                />

            <Button
                android:id="@+id/mdfDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="JAN 15, 2023"
                android:fontFamily="@font/poppins_regular"
                app:strokeWidth="2dp"
                app:elevation="10dp"
                style="@style/Widget.AppCompat.Spinner"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/immuniCareBlue"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Expiry Date: "
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/expDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_marginBottom="16dp"
                android:text="Add Vaccine"
                android:fontFamily="@font/poppins_regular"
                app:strokeWidth="2dp"
                app:strokeColor="@color/white"
                app:elevation="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:fontFamily="@font/poppins_regular"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/immuniCareRed"
                    app:elevation="10dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/immuniCareRed"
                    android:layout_marginHorizontal="8dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Save"
                    android:fontFamily="@font/poppins_regular"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/immuniCareBlue"
                    app:elevation="10dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/immuniCareBlue"
                    android:layout_marginHorizontal="8dp"
                    />


            </LinearLayout>



        </LinearLayout>




    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>