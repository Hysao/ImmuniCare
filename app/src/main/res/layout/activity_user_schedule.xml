<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/immuniCareBlue"
    tools:context=".user.schedule.UserScheduleActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/backBtn"
        android:background="@drawable/vc_back_48_white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:text="Request Scheduled Vaccination"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/visit"
                android:layout_marginBottom="8dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/vaccines"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                >

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BgcCheckbox"
                    android:text="BGC Vaccine"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/HepBCheckbox"
                    android:text="Hepatitis B Vaccine"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/PentavalentCheckbox"
                    android:text="Pentavalent Vaccine"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/OPVCheckbox"
                    android:text="Oral Polio Vaccine"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/IPVCheckbox"
                    android:text="Inactivated Polio Vaccine"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/PneumococcalCheckbox"
                    android:text="Pnuemonia Conjugate Vaccine"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/MMRCheckbox"
                    android:text="Measles, Mumps, Rubella Vaccine"
                    />

            </LinearLayout>




            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Select Date"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/immuniCareBlue"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/immuniCareBlue"
                app:strokeWidth="2dp"
                android:id="@+id/selectDateBtn"
                />


            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Request Schedule"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20sp"
                android:textColor="@color/white"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeWidth="2dp"
                app:strokeColor="@color/immuniCareBlue"
                android:backgroundTint="@color/immuniCareBlue"
                android:id="@+id/requestBtn"
                />


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>