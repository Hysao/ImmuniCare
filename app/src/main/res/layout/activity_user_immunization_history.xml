<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/immuniCareBlue"
    android:orientation="vertical"
    tools:context=".user.immunization.UserImmunizationHistoryActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="start"
        android:background="@drawable/vc_back_48_white"
        android:id="@+id/back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:text="Immunization History"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/recyclerView"/>

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="History is empty"
        android:textColor="@color/immuniCareGrey"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        />


</LinearLayout>