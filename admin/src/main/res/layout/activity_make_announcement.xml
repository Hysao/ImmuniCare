<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/immuniCareBlue"
    android:gravity="center"
    tools:context=".announcements.MakeAnnouncementActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:background="@color/white"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Make Announcement"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginVertical="8dp"
                />


            <EditText
                android:id="@+id/announcement_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Announcement Title"
                android:layout_marginBottom="16dp"
                />

            <EditText
                android:id="@+id/announcement_description"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:textStyle="normal"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_regular"
                android:hint="Announcement Description"
                android:inputType="textMultiLine"
                android:background="@drawable/edit_text_no_line"
                android:layout_marginBottom="8dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >


                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Cancel"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginRight="8dp"
                    android:backgroundTint="@color/immuniCareRed"
                    />

                <Button
                    android:id="@+id/add_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Add"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginRight="8dp"
                    android:backgroundTint="@color/immuniCareBlue"
                    />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>