<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/immuniCareBlue"
    tools:context=".schedule.ScheduleDetailsActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/backBtn"
        android:background="@drawable/vc_back_48_white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Request Details"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginHorizontal="16dp"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User Name: "
                        android:textColor="@color/immuniCareBlue"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="userName"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User Email: "
                        android:textColor="@color/immuniCareBlue"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="userEmail"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Type of Visit: "
                        android:textColor="@color/immuniCareBlue"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/visit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="visit"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vaccine Requestions: "
                        android:textColor="@color/immuniCareBlue"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/vaccines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="vaccines"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Schedule: "
                        android:textColor="@color/immuniCareBlue"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="dateSchedule"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_regular"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/status"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="status"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    />

                <LinearLayout
                    android:id="@+id/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Approve"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/immuniCareBlue"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/immuniCareBlue"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/approveBtn"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reject"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/immuniCareRed"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/immuniCareRed"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/rejectBtn"
                        />


                </LinearLayout>


            </LinearLayout>

        </ScrollView>




    </com.google.android.material.card.MaterialCardView>


</LinearLayout>