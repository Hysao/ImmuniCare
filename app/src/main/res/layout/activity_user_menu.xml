<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/immuniCareBlue"
    tools:context=".user.setting.UserMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="UselessParent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp">


        <ImageButton
            android:id="@+id/menuCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vc_back_48_white"
            android:layout_marginVertical="8dp"
            android:importantForAccessibility="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/menu"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="24dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                >

                <TextView
                    android:id="@+id/menuChildProfile"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/child_s_profile"
                    android:textSize="24sp"
                    android:layout_marginVertical="8dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    app:drawableStartCompat="@drawable/vc_24_person_black"
                    android:drawablePadding="8dp"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/menuImmunizationRecord"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/immunization_record"
                    android:textSize="24sp"
                    android:layout_marginVertical="8dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    app:drawableStartCompat="@drawable/vc_32_notes_black"
                    android:drawablePadding="8dp"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry"
                    />

                <TextView
                    android:id="@+id/menuSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Request Schedule"
                    android:textSize="24sp"
                    android:layout_marginVertical="8dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    app:drawableStartCompat="@drawable/vc_request_32"
                    android:drawablePadding="8dp"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry"
                    />

                <TextView
                    android:id="@+id/menuArticles"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/articles"
                    android:textSize="24sp"
                    android:layout_marginVertical="8dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    app:drawableStartCompat="@drawable/vc_32_news_black"
                    android:drawablePadding="8dp"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry"
                    />

                <TextView
                    android:id="@+id/menuCalendar"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/calendar"
                    android:textSize="24sp"
                    android:layout_marginVertical="8dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    app:drawableStartCompat="@drawable/vc_24_calendar_black"
                    android:drawablePadding="8dp"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry"
                    />

                <TextView
                    android:id="@+id/menuConcern"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/concern"
                    android:textSize="24sp"
                    android:layout_marginVertical="8dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    app:drawableStartCompat="@drawable/vc_32_concern_black"
                    android:drawablePadding="8dp"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry"
                    />

                <TextView
                    android:id="@+id/menuChange"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Change Password"
                    android:textSize="24sp"
                    android:layout_marginVertical="8dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    app:drawableStartCompat="@drawable/vc_change_32"
                    android:drawablePadding="8dp"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry"
                    />

                <TextView
                    android:id="@+id/menuSettings"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/settings"
                    android:textSize="24sp"
                    android:layout_marginVertical="8dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    app:drawableStartCompat="@drawable/vc_32_settings_black"
                    android:drawablePadding="8dp"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry"
                    />

                <TextView
                    android:id="@+id/menuTermsAndCondition"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Terms of Service"
                    android:textSize="24sp"
                    android:layout_marginVertical="8dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    app:drawableStartCompat="@drawable/vc_terms_32"
                    android:drawablePadding="8dp"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry"
                    />

                <TextView
                    android:id="@+id/menuLogout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/logout"
                    android:textSize="24sp"
                    android:layout_marginVertical="8dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    app:drawableStartCompat="@drawable/vc_32_logout_black"
                    android:drawablePadding="8dp"
                    android:paddingStart="8dp"
                    tools:ignore="RtlSymmetry"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>



</LinearLayout>