<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/immuniCareBlue"
    tools:context=".healthworker.HWMainActivity"
    android:padding="10dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vc_menu_48_white"
        android:layout_marginVertical="8dp"
        android:importantForAccessibility="no"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/dayTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/good_day"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="24dp"/>

        <TextView
            android:id="@+id/userNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="userName"
            android:textSize="24sp"
            android:layout_marginTop="-15dp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="24dp"
            />


    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="You've given vaccine to"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:paddingStart="8dp"
                    tools:ignore="HardcodedText,RtlSymmetry"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textAllCaps="true"
                    />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Total"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText,RtlSymmetry"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="00"
                    android:textSize="48sp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText,RtlSymmetry"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Today"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText,RtlSymmetry"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="00"
                    android:textSize="48sp"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText,RtlSymmetry"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"

                    />

            </LinearLayout>


        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Children"
                android:textSize="20sp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,RtlSymmetry"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                />





        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:background="@drawable/tab_bg_2"
                android:id="@+id/hwMainTab"
                />
            
            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/hwMainViewPager"
                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>