<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".validating.UserDetailsActivity"
    android:background="@color/immuniCareBlue"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/vc_back_48_white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="User Request Detail"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="16dp"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessLeaf"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                >


                <TextView
                    android:id="@+id/userAccountId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="accountId"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/immuniCareBlue"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Name: "
                        />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="userName"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/immuniCareBlue"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Email: "
                        />

                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="userEmail"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/immuniCareBlue"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Phone: "
                        />

                    <TextView
                        android:id="@+id/userPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="userPhone"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/immuniCareBlue"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Address: "
                        />

                    <TextView
                        android:id="@+id/userAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="userAddress"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/isHw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Barangay ID"
                    android:textSize="24sp"
                    android:textColor="@color/immuniCareBlue"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="16dp"
                    />


                <ImageView
                    android:id="@+id/barangayIdImage"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    />

                <LinearLayout
                    android:id="@+id/btnContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/rejectBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reject"
                        android:layout_marginHorizontal="8dp"
                        android:textColor="@color/immuniCareRed"
                        android:backgroundTint="@color/white"
                        app:strokeColor="@color/immuniCareRed"
                        app:strokeWidth="2dp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/approveBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Approve"
                        android:layout_marginHorizontal="8dp"
                        android:textColor="@color/immuniCareGreen"
                        android:backgroundTint="@color/white"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/immuniCareGreen"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/isVerified"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"
                    android:textSize="24sp"
                    android:text="isVerified"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:visibility="gone"
                    />

            </LinearLayout>


        </ScrollView>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>